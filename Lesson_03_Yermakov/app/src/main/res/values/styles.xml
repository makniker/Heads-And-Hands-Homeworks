<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="android:TextAppearance" />

    <style name="TextAppearance.H1">
        <item name="android:textSize">@dimen/text_h1_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_h1_line</item>
    </style>

    <style name="TextAppearance.Body1">
        <item name="android:textSize">@dimen/text_body_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_body_line</item>
    </style>

    <style name="TextAppearance.Error">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/silver_chalice</item>
    </style>

    <style name="TextAppearance.Card">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_card_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_card_line</item>
    </style>

    <style name="TextAppearance.Error.H1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_h1_error_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_h1_error_line</item>
    </style>

    <style name="TextAppearance.Error.Body1">
        <item name="android:textSize">@dimen/text_body_error_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_body_error_line</item>
    </style>

    <style name="TextAppearance.H2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_h1_product_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_h1_product_line</item>
    </style>

    <style name="TextAppearance.Body2">
        <item name="android:textSize">@dimen/text_body1_product_size</item>
    </style>

    <style name="TextAppearance.TextField" parent="TextAppearance.Body1" />

    <style name="TextAppearance.TextField.Hint" parent="TextAppearance.Body1" />

    <style name="TextAppearance.Button" parent="TextAppearance.Body1">
        <item name="android:lineSpacingExtra">@dimen/text_button_line</item>
    </style>

    <style name="Theme.Lesson_03_Yermakov.ShapeAppearanceTextInputLayout" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerSize">@dimen/text_input_layout</item>
    </style>

    <style name="Theme.Lesson_03_Yermakov.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/seashell</item>
        <item name="boxStrokeColor">@color/text_field_box_stroke_color</item>
        <item name="shapeAppearance">
            @style/Theme.Lesson_03_Yermakov.ShapeAppearanceTextInputLayout
        </item>
        <item name="android:textAppearance">
            @style/TextAppearance.TextField
        </item>
        <item name="hintTextAppearance">
            @style/TextAppearance.TextField.Hint
        </item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:textColorHint">@color/silver_chalice</item>
        <item name="hintTextColor">@color/silver_chalice</item>
        <item name="endIconTint">@color/black</item>
        <item name="passwordToggleTint">@color/black</item>
        <item name="errorEnabled">true</item>
        <item name="errorContentDescription">@string/input_base_error</item>
    </style>

    <style name="Theme.Lesson_03_Yermakov.Button.Big" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">
            @style/TextAppearance.Button
        </item>
    </style>

    <style name="Theme.Lesson_03_Yermakov.Button.Small" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">
            @style/TextAppearance.Button
        </item>
        <item name="android:background">@drawable/small_button</item>
        <item name="android:lineSpacingExtra">-4dp</item>
    </style>

    <style name="Theme.Lesson_03_Yermakov.Button.Cart" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">
            @style/TextAppearance.Card
        </item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/ic_cart</item>

    </style>

    <style name="Theme.Lesson_03_Yermakov.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Lesson_03_Yermakov.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Lesson_03_Yermakov.ShapeableImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="shapeAppearanceOverlay">@style/RoundedSquare</item>
    </style>

    <style name="RoundedSquare" >
        <item name="cornerSize">10%</item>
    </style>
</resources>